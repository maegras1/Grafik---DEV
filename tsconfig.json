{
    "compilerOptions": {
        "target": "ES2020",
        "useDefineForClassFields": true,
        "module": "ESNext",
        "lib": [
            "ES2020",
            "DOM",
            "DOM.Iterable"
        ],
        "skipLibCheck": true,
        /* Bundler mode */
        "moduleResolution": "bundler",
        "allowImportingTsExtensions": true,
        "resolveJsonModule": true,
        "isolatedModules": true,
        "noEmit": true,
        /* Linting */
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noFallthroughCasesInSwitch": true,
        /* Paths */
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "scripts/*"
            ],
            "@styles/*": [
                "styles/*"
            ],
            "@pages/*": [
                "pages/*"
            ]
        },
        /* Allow JS files during migration */
        "allowJs": true,
        "checkJs": false
    },
    "include": [
        "scripts/**/*",
        "vite.config.ts"
    ],
    "exclude": [
        "node_modules",
        "tests"
    ]
}